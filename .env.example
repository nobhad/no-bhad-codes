# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_PATH=./data/app.db

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Client Portal URLs
CLIENT_PORTAL_URL=https://nobhadcodes.com/client/portal.html
WEBSITE_URL=https://nobhadcodes.com

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="No Bhad Codes <noreply@nobhadcodes.com>"
SMTP_REPLY_TO=support@nobhadcodes.com

# Email Recipients
ADMIN_EMAIL=admin@nobhadcodes.com
SUPPORT_EMAIL=support@nobhadcodes.com

# Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=nbc:

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760