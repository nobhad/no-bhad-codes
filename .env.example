# ===============================================
# NO BHAD CODES - ENVIRONMENT CONFIGURATION
# ===============================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=4001

# Frontend URL (Vite dev server)
FRONTEND_URL=http://localhost:4000

# Database Configuration
DATABASE_PATH=./data/client_portal.db

# JWT Configuration (generate a secure random string for production)
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars
JWT_EXPIRES_IN=7d

# Admin Credentials (for development only - change in production!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-in-production
# Generate hash with: node -e "console.log(require('bcrypt').hashSync('your-password', 10))"
ADMIN_PASSWORD_HASH=

# Client Portal URLs
CLIENT_PORTAL_URL=http://localhost:4000/client/portal
WEBSITE_URL=http://localhost:4000

# API URL (for frontend to connect to backend)
# Production: https://no-bhad-codes-production.up.railway.app
VITE_API_URL=http://localhost:4001

# Admin Dashboard Hash (SHA256 of admin password)
# Generate with: node -e "console.log(require('crypto').createHash('sha256').update('your-password').digest('hex'))"
VITE_ADMIN_PASSWORD_HASH=

# ===============================================
# EMAIL CONFIGURATION
# ===============================================

# Enable/disable email sending
EMAIL_ENABLED=false

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="No Bhad Codes <noreply@nobhadcodes.com>"
SMTP_REPLY_TO=support@nobhadcodes.com

# Email Recipients
SUPPORT_EMAIL=support@nobhadcodes.com

# ===============================================
# THIRD-PARTY SERVICES (Optional)
# ===============================================

# FormSpree (for contact form fallback)
VITE_FORMSPREE_FORM_ID=your-formspree-form-id

# EmailJS (for client-side email fallback)
VITE_EMAILJS_SERVICE_ID=your-emailjs-service-id
VITE_EMAILJS_TEMPLATE_ID=your-emailjs-template-id
VITE_EMAILJS_PUBLIC_KEY=your-emailjs-public-key

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ===============================================
# CACHING (Optional)
# ===============================================

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=nbc:

# ===============================================
# FILE STORAGE
# ===============================================

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Supabase Storage (for production file uploads)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
