<div class="intake-container container">
    <div class="intake-header">
        <h1 class="text-3xl">Project Intake Form</h1>
        <p class="text-lg">Let's bring your vision to life. Tell me about your project.</p>
    </div>

    <div class="progress-bar">
        <div class="progress-fill" id="progressFill"></div>
    </div>

    <form id="intakeForm" class="form-container intake-form" novalidate>
        <!-- Basic Information -->
        <section class="form-section" data-section="1">
            <h2 class="section-title">Basic Information</h2>
            
            <div class="grid grid-cols-2">
                <div class="form-group">
                    <label for="name">Full Name <span class="required">*</span></label>
                    <input type="text" id="name" name="name" class="form-input" required>
                </div>

                <div class="form-group">
                    <label for="email">Email Address <span class="required">*</span></label>
                    <input type="email" id="email" name="email" class="form-input" required>
                </div>

                <div class="form-group">
                    <label for="company">Company/Organization <span class="required">*</span></label>
                    <input type="text" id="company" name="company" class="form-input" required>
                </div>

                <div class="form-group">
                    <label for="phone">Phone Number <span class="required">*</span></label>
                    <input type="tel" id="phone" name="phone" class="form-input" required>
                </div>
            </div>
        </section>

        <!-- Project Overview -->
        <section class="form-section" data-section="2">
            <h2 class="section-title">Project Overview</h2>

            <div class="form-group">
                <label for="projectType">Project Type <span class="required">*</span></label>
                <select id="projectType" name="projectType" class="form-select" required>
                    <option value="">Select project type...</option>
                    <option value="simple-site">Simple Site (1-2 pages, landing page, link tree)</option>
                    <option value="business-site">Small Business Website (5-10 pages)</option>
                    <option value="portfolio">Portfolio Website</option>
                    <option value="ecommerce">E-commerce Store</option>
                    <option value="web-app">Web Application</option>
                    <option value="browser-extension">Browser Extension</option>
                    <option value="other">Other (please specify)</option>
                </select>
            </div>

            <div class="form-group">
                <label for="projectDescription">Project Description <span class="required">*</span></label>
                <textarea id="projectDescription" name="projectDescription" class="form-textarea" 
                    placeholder="Describe your project goals, target audience, and what you want to achieve..." required></textarea>
            </div>

            <div class="grid grid-cols-2">
                <div class="form-group">
                    <label for="timeline">Timeline <span class="required">*</span></label>
                    <select id="timeline" name="timeline" class="form-select" required>
                        <option value="">Select timeline...</option>
                        <option value="asap">ASAP (Rush job)</option>
                        <option value="1-month">Within 1 month</option>
                        <option value="1-3-months">1-3 months</option>
                        <option value="3-6-months">3-6 months</option>
                        <option value="flexible">Flexible timing</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="budget">Budget Range <span class="required">*</span></label>
                    <select id="budget" name="budget" class="form-select" required>
                        <option value="">Select budget range...</option>
                    </select>
                </div>
            </div>
        </section>

        <!-- Features & Functionality -->
        <section class="form-section" data-section="3" id="featuresSection">
            <h2 class="section-title">Features & Functionality</h2>

            <!-- Simple Site Features -->
            <div class="conditional-section" id="simpleSiteFeatures">
                <div class="form-group">
                    <label>Features for Simple Site <span class="required">*</span></label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="contact-form">
                            <span>Contact Form</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="age-verification">
                            <span>Age Verification</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="social-links">
                            <span>Social Media Links</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="analytics">
                            <span>Analytics Tracking</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="mobile-optimized">
                            <span>Mobile Optimization</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="basic-only">
                            <span>Basic static pages only</span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Business Site Features -->
            <div class="conditional-section" id="businessSiteFeatures">
                <div class="form-group">
                    <label>Business Website Features <span class="required">*</span></label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="contact-form">
                            <span>Contact Form</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="blog">
                            <span>Blog/News Section</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="gallery">
                            <span>Photo Gallery</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="testimonials">
                            <span>Customer Testimonials</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="booking">
                            <span>Appointment Booking</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="cms">
                            <span>Content Management System</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="seo-pages">
                            <span>SEO-Optimized Pages</span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Portfolio Features -->
            <div class="conditional-section" id="portfolioFeatures">
                <div class="form-group">
                    <label>Portfolio Features <span class="required">*</span></label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="portfolio-gallery">
                            <span>Project Gallery</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="case-studies">
                            <span>Case Studies</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="resume-download">
                            <span>Resume/CV Download</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="contact-form">
                            <span>Contact Form</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="blog">
                            <span>Blog/Articles</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="testimonials">
                            <span>Client Testimonials</span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- E-commerce Features -->
            <div class="conditional-section" id="ecommerceFeatures">
                <div class="form-group">
                    <label>E-commerce Features <span class="required">*</span></label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="shopping-cart">
                            <span>Shopping Cart</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="payment-processing">
                            <span>Payment Processing</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="inventory-management">
                            <span>Inventory Management</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="user-accounts">
                            <span>User Accounts/Login</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="admin-dashboard">
                            <span>Admin Dashboard</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="shipping-calculator">
                            <span>Shipping Calculator</span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Web App Features -->
            <div class="conditional-section" id="webAppFeatures">
                <div class="form-group">
                    <label>Web Application Features <span class="required">*</span></label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="user-authentication">
                            <span>User Authentication</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="database-integration">
                            <span>Database Integration</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="api-integration">
                            <span>Third-party API Integration</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="user-dashboard">
                            <span>User Dashboard</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="real-time-features">
                            <span>Real-time Features</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="admin-panel">
                            <span>Admin Panel</span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Browser Extension Features -->
            <div class="conditional-section" id="extensionFeatures">
                <div class="form-group">
                    <label>Browser Extension Features <span class="required">*</span></label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="popup-interface">
                            <span>Popup Interface</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="content-modification">
                            <span>Page Content Modification</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="background-processing">
                            <span>Background Processing</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="data-storage">
                            <span>Data Storage</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="external-api">
                            <span>External API Calls</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="features" value="cross-browser">
                            <span>Cross-browser Compatibility</span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="integrations">Third-party Integrations Needed <span class="required">*</span></label>
                <textarea id="integrations" name="integrations" class="form-textarea" 
                    placeholder="e.g., PayPal, Stripe, Google Analytics, social media, email marketing tools, CRM systems... OR type 'None' if no integrations needed" required></textarea>
            </div>

            <div class="grid grid-cols-2">
                <div class="form-group">
                    <label for="pages">Estimated Number of Pages <span class="required">*</span></label>
                    <select id="pages" name="pages" class="form-select" required>
                        <option value="">Select...</option>
                        <option value="1-2">1-2 pages</option>
                        <option value="3-5">3-5 pages</option>
                        <option value="6-10">6-10 pages</option>
                        <option value="11-20">11-20 pages</option>
                        <option value="20-plus">20+ pages</option>
                        <option value="dynamic">Dynamic (database-driven)</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="hosting">Hosting Preference <span class="required">*</span></label>
                    <select id="hosting" name="hosting" class="form-select" required>
                        <option value="">Select...</option>
                        <option value="need-hosting">Need hosting setup</option>
                        <option value="have-hosting">Have existing hosting</option>
                        <option value="prefer-managed">Prefer managed hosting</option>
                        <option value="no-preference">No preference</option>
                    </select>
                </div>
            </div>
        </section>

        <!-- Design & Content -->
        <section class="form-section" data-section="4">
            <h2 class="section-title">Design & Content</h2>

            <div class="form-group">
                <label>Design Services Needed <span class="required">*</span></label>
                <div class="radio-group">
                    <label class="radio-item">
                        <input type="radio" name="designLevel" value="full-design" required>
                        <span>Full Design Service</span>
                    </label>
                    <label class="radio-item">
                        <input type="radio" name="designLevel" value="partial-design">
                        <span>Design Guidance Only</span>
                    </label>
                    <label class="radio-item">
                        <input type="radio" name="designLevel" value="have-designs">
                        <span>Have Existing Designs</span>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label>Existing Brand Assets <span class="required">*</span></label>
                <div class="checkbox-group">
                    <label class="checkbox-item">
                        <input type="checkbox" name="brandAssets" value="logo">
                        <span>Logo</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="brandAssets" value="colors">
                        <span>Brand Colors</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="brandAssets" value="fonts">
                        <span>Brand Fonts</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="brandAssets" value="guidelines">
                        <span>Brand Guidelines</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="brandAssets" value="photos">
                        <span>Professional Photos</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="brandAssets" value="none">
                        <span>Need everything created</span>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label for="inspiration">Design Inspiration/Reference Sites <span class="required">*</span></label>
                <textarea id="inspiration" name="inspiration" class="form-textarea" 
                    placeholder="Share links to websites you like or describe your preferred style... OR type 'Open to suggestions' if you'd like design recommendations" required></textarea>
            </div>

            <div class="form-group">
                <label>Content Status <span class="required">*</span></label>
                <div class="radio-group">
                    <label class="radio-item">
                        <input type="radio" name="contentStatus" value="ready" required>
                        <span>Content Ready</span>
                    </label>
                    <label class="radio-item">
                        <input type="radio" name="contentStatus" value="partial">
                        <span>Partially Ready</span>
                    </label>
                    <label class="radio-item">
                        <input type="radio" name="contentStatus" value="need-help">
                        <span>Need Writing Help</span>
                    </label>
                </div>
            </div>
        </section>

        <!-- Additional Services -->
        <section class="form-section" data-section="5">
            <h2 class="section-title">Additional Services</h2>

            <div class="form-group">
                <label>Add-on Services Interested In</label>
                <div class="checkbox-group">
                    <label class="checkbox-item">
                        <input type="checkbox" name="addons" value="maintenance-guide">
                        <span>Maintenance Guide/Training</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="addons" value="seo-setup">
                        <span>SEO Setup</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="addons" value="analytics">
                        <span>Analytics Setup</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="addons" value="backup-system">
                        <span>Backup System</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="addons" value="ongoing-support">
                        <span>Ongoing Support</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" name="addons" value="copywriting">
                        <span>Professional Copywriting</span>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label for="techComfort">Your Technical Comfort Level <span class="required">*</span></label>
                <select id="techComfort" name="techComfort" class="form-select" required>
                    <option value="">Select...</option>
                    <option value="beginner">Beginner (prefer simple solutions)</option>
                    <option value="intermediate">Intermediate (comfortable with basic updates)</option>
                    <option value="advanced">Advanced (can handle technical tasks)</option>
                </select>
            </div>
        </section>

        <!-- Final Details -->
        <section class="form-section" data-section="6">
            <h2 class="section-title">Final Details</h2>

            <div class="form-group">
                <label for="currentSite">Current Website (if any) <span class="required">*</span></label>
                <input type="url" id="currentSite" name="currentSite" class="form-input" 
                    placeholder="https://example.com OR type 'None' if no current website" required>
            </div>

            <div class="form-group">
                <label for="challenges">Biggest Challenges/Concerns <span class="required">*</span></label>
                <textarea id="challenges" name="challenges" class="form-textarea" 
                    placeholder="What are your main concerns about this project? Any specific challenges you've faced before?" required></textarea>
            </div>

            <div class="form-group">
                <label for="additionalInfo">Additional Information <span class="required">*</span></label>
                <textarea id="additionalInfo" name="additionalInfo" class="form-textarea" 
                    placeholder="Anything else you'd like me to know about your project, business, or requirements? OR type 'Nothing additional' if no other details" required></textarea>
            </div>

            <div class="form-group">
                <label>Did someone refer you? <span class="required">*</span></label>
                <div class="radio-group">
                    <label class="radio-item">
                        <input type="radio" name="wasReferred" value="yes" required>
                        <span>Yes</span>
                    </label>
                    <label class="radio-item">
                        <input type="radio" name="wasReferred" value="no">
                        <span>No</span>
                    </label>
                </div>
            </div>

            <div class="conditional-section" id="referralSource">
                <div class="form-group">
                    <label for="referralName">Who referred you? <span class="required">*</span></label>
                    <input type="text" id="referralName" name="referralName" class="form-input" 
                        placeholder="Name of person or company that referred you">
                </div>
            </div>
        </section>

        <!-- Submit Section -->
        <div class="submit-section">
            <button type="submit" class="btn btn-primary" id="submitBtn">
                Submit Project Request
            </button>
            
            <div class="loading" id="loadingDiv">
                <div class="spinner"></div>
                <span>Processing your request...</span>
            </div>
            
            <p class="form-footer-text">
                You'll receive a detailed project proposal and timeline within 24-48 hours.
            </p>
        </div>
    </form>
</div>