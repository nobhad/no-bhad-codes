<section class="client-login">
    <div class="container">
        <div class="client-content">
            <h1 class="login-title">CLIENT PORTAL</h1>

            <div class="portal-cards">
                <!-- Intake Card -->
                <div class="portal-card">
                    <div class="portal-card-header">
                        <h2>New Client</h2>
                    </div>
                    <div class="portal-card-body">
                        <p>Ready to start a new project? Fill out our intake form and I'll get back to you within 24-48 hours.</p>
                        <div class="portal-card-avatar">
                            <img src="/images/avatar.svg" alt="Avatar" />
                        </div>
                        <button type="button" class="btn btn-primary" id="openIntakeModal">Start Intake Form</button>
                    </div>
                </div>

                <!-- Login Card -->
                <div class="portal-card">
                    <div class="portal-card-header">
                        <h2>Existing Client</h2>
                    </div>
                    <div class="portal-card-body">
                        <p class="login-description">Already have an account? Sign in to access your projects, files, and messages.</p>
                        <form id="loginForm" class="login-form" novalidate>
                            <div class="form-group">
                                <label for="login-email">Email</label>
                                <input type="email" id="login-email" name="email" class="form-input" placeholder="your@email.com" required>
                            </div>
                            <div class="form-group">
                                <label for="login-password">Password</label>
                                <div class="password-input-wrapper">
                                    <input type="password" id="login-password" name="password" class="form-input" placeholder="Enter password" required>
                                    <button type="button" class="password-toggle" aria-label="Toggle password visibility">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                            <circle cx="12" cy="12" r="3"></circle>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                            <div class="login-error" id="loginError"></div>
                            <button type="submit" class="btn btn-primary btn-full">
                                <span class="btn-text">Sign In</span>
                                <span class="btn-loader"></span>
                            </button>
                        </form>
                        <div class="login-footer">
                            <p>Forgot your password? <a href="mailto:hello@nobhadcodes.com">Contact me</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="module">
    // Password toggle
    document.querySelector('.password-toggle')?.addEventListener('click', function() {
        const input = document.getElementById('login-password');
        const type = input.type === 'password' ? 'text' : 'password';
        input.type = type;
    });

    // Login form submission
    document.getElementById('loginForm')?.addEventListener('submit', async function(e) {
        e.preventDefault();

        const email = document.getElementById('login-email').value;
        const password = document.getElementById('login-password').value;
        const errorDiv = document.getElementById('loginError');
        const submitBtn = this.querySelector('button[type="submit"]');

        // Show loading state
        submitBtn.classList.add('loading');
        errorDiv.textContent = '';
        errorDiv.classList.remove('show');

        try {
            const response = await fetch('/api/auth/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email, password })
            });

            const data = await response.json();

            if (response.ok && data.token) {
                // Store token and redirect to portal
                localStorage.setItem('authToken', data.token);
                localStorage.setItem('clientEmail', email);
                window.location.href = '/client/portal';
            } else {
                // Show error
                errorDiv.textContent = data.message || 'Invalid email or password';
                errorDiv.classList.add('show');
            }
        } catch (error) {
            // Demo mode fallback
            if (email === 'demo@example.com' && password === 'demo123') {
                localStorage.setItem('authToken', 'demo-token');
                localStorage.setItem('clientEmail', email);
                window.location.href = '/client/portal';
            } else {
                errorDiv.textContent = 'Unable to connect. Try demo@example.com / demo123';
                errorDiv.classList.add('show');
            }
        } finally {
            submitBtn.classList.remove('loading');
        }
    });

    // Terminal Intake Modal
    const openModalBtn = document.getElementById('openIntakeModal');
    const modal = document.getElementById('intakeModal');
    const closeModalBtn = document.getElementById('closeIntakeModal');
    const minimizeModalBtn = document.getElementById('minimizeIntakeModal');

    // Move modal to body so it's outside main container
    if (modal && modal.parentElement !== document.body) {
        document.body.appendChild(modal);
    }

    openModalBtn?.addEventListener('click', () => {
        modal?.classList.add('open');
        document.body.style.overflow = 'hidden';
        // Initialize the terminal intake if not already done
        if (!window.terminalIntakeInitialized) {
            import('/src/features/client/terminal-intake.ts').then(module => {
                const container = document.querySelector('#intakeModal .terminal-intake-container');
                if (container) {
                    // Get existing client data from localStorage if available
                    const clientData = {
                        name: localStorage.getItem('clientName') || undefined,
                        email: localStorage.getItem('clientEmail') || undefined,
                        company: localStorage.getItem('clientCompany') || undefined
                    };
                    // Only pass clientData if we have at least name or email
                    const hasClientData = clientData.name || clientData.email;
                    const intake = new module.TerminalIntakeModule(container, {
                        isModal: true,
                        clientData: hasClientData ? clientData : undefined
                    });
                    intake.init();
                    window.terminalIntakeInitialized = true;
                }
            });
        }
    });

    closeModalBtn?.addEventListener('click', () => {
        modal?.classList.remove('open');
        modal?.classList.remove('minimized');
        modal?.classList.remove('fullscreen');
        document.body.style.overflow = '';
        // Reset so it can reinitialize with resume prompt next time
        window.terminalIntakeInitialized = false;
        // Clear the container so it reinitializes fresh
        const container = document.querySelector('#intakeModal .terminal-intake-container');
        if (container) container.innerHTML = '';
    });

    minimizeModalBtn?.addEventListener('click', () => {
        modal?.classList.toggle('minimized');
    });

    // Close on escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal?.classList.contains('open')) {
            modal.classList.remove('open');
            modal.classList.remove('minimized');
            modal.classList.remove('fullscreen');
            document.body.style.overflow = '';
            window.terminalIntakeInitialized = false;
            const container = document.querySelector('#intakeModal .terminal-intake-container');
            if (container) container.innerHTML = '';
        }
    });

    // Backdrop click disabled - must use close button
</script>

