{
  "name": "no-bhad-codes",
  "version": "10.0.0",
  "description": "Professional portfolio and client management system built with TypeScript, Express, and modern web technologies",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx server/app.ts",
    "dev:full": "concurrently --kill-others \"npm run dev\" \"npm run dev:server\"",
    "dev:quiet": "concurrently --kill-others -r \"npm run dev 2>/dev/null\" \"npm run dev:server\"",
    "build": "DISABLE_PROMO=true vite build",
    "build:server": "tsc server/**/*.ts --outDir dist/server --target ES2020 --module ES2020 --moduleResolution node",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write \"**/*.{js,ts,json,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,css,html}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "test:coverage:ci": "vitest run --coverage --reporter=verbose --reporter=json --reporter=html",
    "test:coverage:threshold": "vitest run --coverage --coverage.thresholds.autoUpdate=true",
    "coverage:check": "node scripts/coverage-check.js",
    "coverage:badge": "node scripts/coverage-check.js badge",
    "build:analyze": "vite build --mode production && vite-bundle-analyzer dist",
    "build:stats": "vite build --mode production --reporter=verbose",
    "optimize": "npm run build:stats && npm run lint && npm run typecheck",
    "prepare": "husky || true",
    "migrate": "tsx scripts/migrate.ts migrate",
    "migrate:rollback": "tsx scripts/migrate.ts rollback",
    "migrate:status": "tsx scripts/migrate.ts status",
    "migrate:create": "tsx scripts/migrate.ts create",
    "db:setup": "npm run migrate",
    "db:backup": "tsx scripts/backup-database.ts"
  },
  "keywords": [
    "portfolio",
    "client-management",
    "typescript",
    "express",
    "gsap",
    "vite",
    "business-card",
    "web-development",
    "nodejs",
    "sqlite",
    "jwt-auth",
    "progressive-web-app"
  ],
  "author": "Noelle Bhaduri <noelle@nobhad.codes>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noellebhaduri/no-bhad-codes.git"
  },
  "homepage": "https://github.com/noellebhaduri/no-bhad-codes#readme",
  "bugs": {
    "url": "https://github.com/noellebhaduri/no-bhad-codes/issues"
  },
  "engines": {
    "node": ">=20.x",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.55.0",
    "@sentry/vite-plugin": "^4.2.0",
    "@types/archiver": "^7.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/node": "^20.12.0",
    "@types/node-cron": "^3.0.11",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "concurrently": "^9.2.1",
    "ejs": "^3.1.10",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "javascript-obfuscator": "^5.0.1",
    "jsdom": "^24.0.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "postcss-custom-media": "^11.0.6",
    "prettier": "^3.6.2",
    "sqlite": "^5.1.1",
    "supertest": "^6.3.3",
    "terser": "^5.44.0",
    "ts-node": "^1.7.1",
    "tsx": "^4.20.5",
    "typescript": "^5.4.0",
    "vite": "^7.2.2",
    "vite-plugin-ejs": "^1.7.0",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "@sentry/browser": "^10.8.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^10.28.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.1",
    "@types/redis": "^4.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "emoji-picker-element": "^1.28.0",
    "express": "^5.1.0",
    "gsap": "^3.12.5",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "pdf-lib": "^1.17.1",
    "picocolors": "^1.1.1",
    "redis": "^5.8.2",
    "sqlite3": "^5.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ua-parser-js": "^2.0.7"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,ts}": [
      "npm run test:coverage -- --run --changed"
    ]
  }
}
